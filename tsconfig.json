        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "module": "es2020",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "target",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "extends": "@tsconfig/node16/tsconfig.json",
    "include": ["src/**/*.ts"]
}