{
	"compilerOptions": {
		"lib": ["ES2020"],
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "target",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"baseUrl": "src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true
	},
	"include": [
		"src/**/*.ts"
	],
}
